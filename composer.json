{
    "name": "simple-php-website/testing",
    "description": "Simple PHP Website with Codeception Testing",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "codeception/codeception": "^5.0",
        "codeception/module-webdriver": "^4.0",
        "codeception/module-rest": "^3.0",
        "codeception/module-phpbrowser": "^3.0",
        "codeception/module-asserts": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "codecept run",
        "test-acceptance": "codecept run acceptance",
        "test-functional": "codecept run functional",
        "test-unit": "codecept run unit",
        "serve": "php -S localhost:8000",
        "docs": "./scripts/generate-docs.sh",
        "docs-generate": "php scripts/generate-test-diagrams.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
